<ul{% if class %} class="{{ class }}"{% endif %}>
  {% for item in items %}
    <li class="{{ item.classes | join(' ') }} text-center">
      <a href="{{ item.link }}" class="inline-flex justify-center items-center text-center text-2xl px-3 py-1 font-normal"{%if item.target %} target="{{ item.target }}"{% endif %}>{{ item.title }}</a>
      {% if item.children|length > 0 %}
        {% include "menu.twig" with {'items': item.children} %}
      {% endif %}
    </li>
  {% endfor %}
</ul>
